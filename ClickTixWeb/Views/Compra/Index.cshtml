@{
    ViewData["Title"] = "Home Page";
}

@model confirmarButacasViewModel;

<!-- Section-->
<section class="py-5">
    <div class="container row offset-1">


        <div class="mt-3 bg-danger rounded col-6 p-3">
            <form>
                <div class="row">
                    <!-- Email -->
                    <div class="form-group pt-2" class="text-light">
                        <label for="email" class="text-light">Email:</label>
                        <input type="email" class="form-control" id="email" placeholder="Ingrese su email" required>
                    </div>
                </div>
                <div class="row">
                    <!-- Nombre de Titular -->
                    <div class="form-group">
                        <label for="nombreTitular" class="text-light">Nombre de Titular:</label>
                        <input type="text" class="form-control" id="nombreTitular" placeholder="Ingrese el nombre del titular" required>
                    </div>
                </div>

                <div class="row">
                    <!-- DNI de Titular -->
                    <div class="form-group">
                        <label for="dniTitular" class="text-light">DNI de Titular:</label>
                        <input type="text" class="form-control" id="dniTitular" placeholder="Ingrese el DNI del titular" required>
                    </div>
                </div>
                <div class="row">
                    <!-- Número de Tarjeta -->
                    <div class="form-group col-6">
                        <label for="numeroTarjeta" class="text-light">Número de Tarjeta:</label>
                        <input type="text" class="form-control" id="numeroTarjeta" placeholder="Ingrese el número de tarjeta" required>
                    </div>
                    <!-- Código de Seguridad -->
                    <div class="form-group col-5">
                        <label for="codigoSeguridad" class="text-light">Código de Seguridad:</label>
                        <input type="text" class="form-control" id="codigoSeguridad" placeholder="Ingrese el código de seguridad" required>
                    </div>
                </div>


                <div class="row">
                    <!-- Fecha de Vencimiento -->
                    <div class="form-group">
                        <label for="fechaVencimiento" class="text-light">Fecha de Vencimiento:</label>
                        <input type="text" class="form-control" id="fechaVencimiento" placeholder="MM/AA" required>
                    </div>
                </div>

                <div class="row">
                    <!-- Medio de Pago -->
                    <div class="form-group">
                        <label for="medioPago" class="text-light">Medio de Pago:</label>
                        <select class="form-control" id="medioPago" required>
                            <option value="tarjeta">Tarjeta de Crédito</option>
                            <option value="efectivo">Efectivo</option>
                            <option value="otro">Otro</option>
                        </select>
                    </div>
                </div>
                <div class="condiciones p-3">
                    <div class="row">
                        <!-- Checkbox 1 -->
                        <div class="form-check">
                            <label class="form-check-label" for="checkbox1"> <p class="text-light">Acepto los términos y condiciones.</p></label>
                            <input type="checkbox" class="form-check-input" id="checkbox1" required>
                        </div>
                    </div>
                    <div class="row">
                        <!-- Checkbox 2 -->
                        <div class="form-check">
                            <label class="form-check-label" for="checkbox2"><p class="text-light">Autorizo el uso de mis datos personales.</p></label>
                            <input type="checkbox" class="form-check-input" id="checkbox2" required>
                        </div>

                    </div>
                </div>
                <!-- Botón de Enviar -->
                <button type="submit" class="btn btn-secondary mt-3" class="text-light">Confirmar Compra</button>
            </form>
        </div>
        <div class="container mt-3 ms-2 p-2 col-5">
            <div class="card p-3 mx-auto" style="max-width: 500px;">
                <div class="col-12 mt-3">
                    <div class="row">
                        <div class="col-6">
                            <img class="card-img-top" src="" alt="Portada de la pelicula (inner necesario)" />
                        </div>
                        <div class="col-6">
                            <div class="row "><h2>@Model.Funcion.Fecha</h2></div>
                            <div class="row"><h4>@Model.TituloPelicula</h4></div>
                            <div class="row"><p>Idioma: @Model.Funcion.IdiomaFuncion</p></div>
                            <div class="row"><p>Dimension: @Model.Funcion.IdDimension</p></div>
                            <div class="row"><p>Numero de Sala: @Model.Funcion.IdSala</p></div>
                        </div>
                    </div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-6"><p>Numero de Entradas: @Model.Asientos.Length</p></div>
                    <div class="col-6"><p>Precio unitario: $@Model.Funcion.IdDimension</p></div>
                    @foreach (int asiento in Model.Asientos)
                    {
                        // aca falta buscar la info del asiento mediante el ID
                        <div class="row">
                            <div class="col-6"><p>Asiento: @asiento</p></div>
                        </div>
                    
                    }

                </div>
                <hr>
                <div class="row">
                    <div class="col-6"><p>SUBTOTAL</p></div>
                    <div class="col-6"><p>$500</p></div>
                </div>
                <div class="row">
                    <div class="col-6"><p>Cargo por servicio</p></div>
                    <div class="col-6"><p>$200</p></div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-6"><p>TOTAL:</p></div>
                    <div class="col-6"><p>$200</p></div>
                </div>
                <hr>
                <div class="row">
                    <div class="col-6 text-center">CLICKTIX ABASTO @Model.Funcion.IdSala</div>
                    <div class="col-6 text-center">18-15159778-3 @Model.Funcion.IdSala</div>
                </div>
            </div>

        </div>
</section>