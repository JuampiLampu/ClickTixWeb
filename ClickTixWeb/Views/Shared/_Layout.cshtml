
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <meta name="description" content="" />
        <meta name="author" content="" />
        <title>@ViewData["Title"] - ClickTixWeb</title>

        
        <link type="text/css" rel="stylesheet" href="https://www.gstatic.com/firebasejs/ui/6.0.1/firebase-ui-auth.css" />

       
        










        <!-- Favicon-->
        <link rel="icon" type="image/x-icon" href="~/lib/favicon.ico" />
        <!-- Bootstrap icons-->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
        <!-- Core theme CSS (includes Bootstrap)-->
        <link href="~/css/site.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
</head>
    <body>
        <!-- Navigation-->
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container px-4 px-lg-5">
                <a class="navbar-brand" href="/home">
                <img src="~/imgs/logo.png" alt="ClickTix">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-4">
                </ul>
                <form class="d-flex">

                    @if (!string.IsNullOrEmpty(ViewData["UsuarioNombre"] as string))
                    {
                        <span class="navbar-text">Bienvenido, @ViewData["UsuarioNombre"]</span>
                    }
                    else
                    {
                        <a href="/login" class="btn btn-danger me-2" role="button">INGRESAR</a>
                        <a href="/register" class="btn btn-outline-danger rounded me-5" role="button">REGISTRAR</a>
                    }

              


                    <div class="dropdown" id="userDropdown">
                      <button class="btn btn-outline-dark rounded-circle dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                         <i class="fa-solid fa-user"></i>
                      </button>
                      <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                        <li><a href="/tustickets" class="dropdown-item" role="button"> Tus Tickets </a></li>
                        <li><a id="cerrarSesion" class="dropdown-item" href="/login">Cerrar sesion</a></li>
                      </ul>
                    </div>


                </form>
            </div>
            </div>
        </nav>


    <div class="">
        <main role="main" class="">
            @RenderBody()
        </main>
    </div>





<!-- Footer-->
    <footer class="bg-dark text-light">
        <div class="container py-5">
            <div class="row">
                <div class="col-md-3">
                    <h5 class="fw-bolder">Síguenos en redes sociales</h5>
                    <ul class="list-inline">
                        <li class="list-inline-item"><a href="#" class="text-light">Facebook</a></li>
                        <li class="list-inline-item"><a href="#" class="text-light">Twitter</a></li>
                        <li class="list-inline-item"><a href="#" class="text-light">Instagram</a></li>
                    </ul>
                </div>

                <div class="col-md-3">
                    <h4>Cartelera</h4>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-light">Estrenos</a></li>
                        <li><a href="#" class="text-light">Ventas Anticipadas</a></li>
                        <li><a href="#" class="text-light">Peliculas 2D</a></li>
                        <li><a href="#" class="text-light">Peliculas 3D</a></li>
                        <li><a href="#" class="text-light">Peliculas 4D</a></li>
                        <li><a href="#" class="text-light">Peliculas 5D</a></li>
                        <li><a href="#" class="text-light">Comfort</a></li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h4>Premium Class</h4>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-light">Inicio</a></li>
                        <li><a href="#" class="text-light">Acerca de nosotros</a></li>
                        <li><a href="#" class="text-light">Servicios</a></li>
                        <li><a href="#" class="text-light">Contacto</a></li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h4>Cines</h4>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-light">Inicio</a></li>
                        <li><a href="#" class="text-light">Acerca de nosotros</a></li>
                        <li><a href="#" class="text-light">Servicios</a></li>
                        <li><a href="#" class="text-light">Contacto</a></li>
                    </ul>
                </div>
            </div>

            <!-- Derechos de autor -->
            <div class="text-center mt-4">
                <p>&copy; ClickTix. Todos los derechos reservados.</p>
            </div>
        </div>
        </footer>

       <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
        <script>
            $(document).ready(function () {
                
                var email = localStorage.getItem("email");

                
                if (!email) {
                    $('#userDropdown').hide();
                }

               
                $('#cerrarSesion').click(function () {
                    
                    localStorage.removeItem("email");
                    
                    window.location.href = '/login';
                });
            });
        </script>


        <script src="https://www.gstatic.com/firebasejs/ui/6.0.1/firebase-ui-auth.js"></script>
        <script src="https://kit.fontawesome.com/1836fc5ff0.js" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/scripts.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)

        </body>
    </html>

   
