@{
    ViewData["Title"] = "Home Page";
}

<!-- Section-->
<section class="py-5">
    <div class="container">

        <div class="row">
            <div class="mt-3 bg-dark rounded col-6 p-3 offset-1">

                  <form method="post" asp-controller="Register"  asp-action="Create">

                    @Html.AntiForgeryToken()
                    <h1 class="text-white-50 mb-2">Registrate</h1>
                    <div class="row">
                        <!-- Nombre -->
                        <div class="form-group col-6">
                            <label for="nombre" class="text-light">Nombre:</label>
                            <input type="text" class="form-control" name="nombre" id="nombre" placeholder="Ingrese su nombre" required>
                        </div>
                        <!-- Apellido -->
                        <div class="form-group col-5">
                            <label for="apellido" class="text-light">Apellido:</label>
                            <input type="text" class="form-control" name="apellido" id="apellido" placeholder="Ingrese su apellido" required>
                        </div>
                    </div>

                    <div class="row">
                        <!-- Email -->
                        <div class="form-group col-11">
                            <label for="email" class="text-light">Email:</label>
                            <input type="email" class="form-control" name="email" id="email" placeholder="Ingrese su email" required>
                        </div>
                    </div>
                    <div class="row">
                        <!-- Contraseña -->
                        <div class="form-group col-6">
                            <label for="pass" class="text-light">Contraseña:</label>
                            <input type="password" class="form-control" name="pass" id="pass" placeholder="Ingrese su contraseña" required>
                        </div>
                        <!-- confirmar contraseña -->
                        <div class="form-group col-5">
                            <label for="pass" class="text-light">Confirme su contraseña:</label>
                            <input type="password" class="form-control" name="passc" id="pass" placeholder="Confirme su contraseña" required>
                        </div>
                    </div>

                    <div class="row">
                        <!-- Fecha de nacimiento -->
                        <div class="form-group col-6">
                            <label for="fnac" class="text-light">Fecha de nacimiento:</label>
                            <input type="date" class="form-control" name="fnac" id="fnac">
                        </div>
                        <!-- Genero -->
                        <div class="form-group col-5">
                            <label for="genero" class="text-light">Genero:</label>
                            <select class="form-control"name="genero" id="genero">
                                <option value="1">Masculino</option>
                                <option value="2">Femenino</option>
                                <option value="3">No Binario</option>
                                
                            </select>
                        </div>
                    </div>

                    <div class="row">
                        <!-- Ceular -->
                        <div class="form-group col-6">
                            <label for="celular" class="text-light">Numero de Celular:</label>
                            <input type="text" class="form-control" name="genero" id="celular" placeholder="Ingrese su numero de celular" required>
                        </div>
                        <!-- Sucursal Habitual -->
                        <div class="form-group col-5">
                            <label for="sucursal_habitual" class="text-light">Sucursal Habitual:</label>
                            <select class="form-control" name ="sucursal_habitual"id="sucursal_habitual">
                                <option value="1">Abasto</option>
                                <option value="2">Devoto</option>
                            </select>
                        </div>
                    </div>
                    <div class="condiciones p-3">
                        <div class="row">
                            <!-- Checkbox 1 -->
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="checkbox1" required>
                                <label class="form-check-label" for="checkbox1 "><p class="text-light">Deseo Recibir mails de estrenos y promociones.</p></label>
                            </div>
                        </div>
                        <div class="row">
                            <!-- Checkbox 2 -->
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input" id="checkbox2" required>
                                <label class="form-check-label" for="checkbox2"><p class="text-light">¿Ya compraste el pack de ClickTix fan por las boleterias?.</p></label>
                            </div>

                        </div>
                    </div>
                    <!-- Botón de Enviar -->
                    <button type="submit" class="btn btn-primary mt-3" onclick="return validatePassword()" >Enviar</button>
                </form>

            </div>

            <!-- Foto de promocion -->
            <div class="col-5 mt-3 rounded">
                <img src="https://dummyimage.com/350x600/dee2e6/6c757d.jpg" alt="Imagen de referencia" class="img-fluid">
            </div>

        </div>
</section>
<script>
    function validatePassword() {
        var password = document.getElementById("pass").value;
        var confirmPassword = document.getElementById("passc").value;

        if (password !== confirmPassword) {
            alert("Las contraseñas no coinciden");
            return false;
        }

        return true;
    }
</script>